@page "/busdetails/{id}"
@inject IBusService BusService
@inject IAboutShowroomService ShowroomService
@inject NavigationManager NavManager
@layout UserLayout

@using Entities


<div style="height: 50px;"></div>
@if (showroom != null)
{
 
    <div class="bg-dark text-white">
        <div class="row">
            <div class="col-md-2 ps-5" style="margin-top:-60px">
                <img src="@(!string.IsNullOrEmpty(showroom.Logo) ? showroom.Logo : "/images/defaultlogo.jpg")"
                     class="rounded-circle border border-3 border-white shadow"
                     style="width:120px;height:120px;object-fit:cover;" />
            </div>
            <div class="col-md-10">
                <div class="row pt-2">
                    <div class="col-md-4">
                        <h2 class="fw-bold">@showroom.ShowroomName</h2>
                    </div>
                    <div class="col-md-4 pt-1">
                        <span class="small">📍 @showroom.Address,@showroom.City,@showroom.Country</span>
                    </div>
                    <div class="col-md-4 pt-1">
                        <span class="small pe-2"> 📞@showroom.ContactPhone </span>
                        @if (!string.IsNullOrEmpty(showroom.ContactEmail))
                        {
                            <div class="d-flex align-items-center small">
                                <span class="me-1">✉️</span>
                                <span>@showroom.ContactEmail</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (bus == null)
    {
        <p>Loading bus details...</p>
    }
    else
    {
        <!-- Bus Info -->
        <div class="card shadow-lg p-4" style="max-width: 800px; margin: auto;">
            <div class="row g-4">
                <!-- Bus Image -->
                <div class="col-md-5 text-center">
                    <img src="@bus.Image" alt="Bus Image" class="img-fluid rounded"
                         style="max-height: 250px; object-fit: cover;" />
                </div>

                <!-- Bus Info -->
                <div class="col-md-7">
                    <h4>@bus.Make @bus.Model (@bus.Year)</h4>
                    <p class="text-muted">Registration: @bus.RegistrationNumber</p>

                    <dl class="row">
                        <dt class="col-sm-4">Color</dt>
                        <dd class="col-sm-8">@bus.Color</dd>

                        <dt class="col-sm-4">Fuel Type</dt>
                        <dd class="col-sm-8">@bus.FuelType</dd>

                        <dt class="col-sm-4">Transmission</dt>
                        <dd class="col-sm-8">@bus.Transmission</dd>

                        <dt class="col-sm-4">Seating</dt>
                        <dd class="col-sm-8">@bus.SeatingCapacity</dd>

                        <dt class="col-sm-4">AC</dt>
                        <dd class="col-sm-8">@(bus.IsAC ? "Yes" : "No")</dd>

                        <dt class="col-sm-4">With Carrier</dt>
                        <dd class="col-sm-8">@(bus.WithCarrier ? "Yes" : "No")</dd>

                        <dt class="col-sm-4">Bus Type</dt>
                        <dd class="col-sm-8">@bus.BusType</dd>

                       @if (bus.BusDescription != null){
                        <dt class="col-sm-4">Bus Descriptiom</dt>
                        <dd class="col-sm-8">@bus.BusDescription</dd>
                        }
                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">@(bus.Status ? "Available" : "Not Available")</dd>

                        <dt class="col-sm-4">Created At</dt>
                        <dd class="col-sm-8">@bus.CreatedAt.ToLocalTime().ToString("f")</dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="text-center mt-4">
            <NavLink class="btn btn-secondary" href="/searchbuspackages">
                ⬅ Back to search
            </NavLink>
            <NavLink class="btn btn-primary" href="@($"/showroomdetails/{showroom.Id}")">
                View Showroom
            </NavLink>
        </div>

      
    }
    <div style="height:60px;"></div>
}

<section class="container-fluid bg-dark fixed-bottom" style="height:60px;">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card bg-transparent text-secondary">
                    <div class="card-body py-2">
                        <div class="mb-2">
                            <img src="/logowhitered.png" height="20" />
                            <span class="small">&copy; 2025 GoRent. All rights reserved.</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@code {
    [Parameter] public string? Id { get; set; }
    private EntBus? bus;
    private EntAboutShowroom showroom = new();

    protected override async Task OnInitializedAsync()
    {
        if (!string.IsNullOrEmpty(Id))
        {
            bus = await BusService.GetByIdAsync(Id);
            if (bus != null)
            {
                showroom = await ShowroomService.GetByBusinessId(bus.BusinessId) ?? new EntAboutShowroom();
            }
        }
    }
}